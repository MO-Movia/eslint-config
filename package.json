{
  "name": "@modusoperandi/eslint-config",
  "version": "3.0.1",
  "description": "Module containing the lint configuring for MO",
  "main": "main.js",
  "type": "commonjs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MO-Movia/eslint-config"
  },
  "scripts": {
    "ci:build": "echo 'nothing to build'",
    "ci:bom": "npx cyclonedx-npm --ignore-npm-errors --output-format XML --output-file bom.xml",
    "lint": "echo 'nothing to lint'",
    "test:coverage": "echo 'nothing to test'",
    "update": "npx npm-check-updates --peer --target semver -u && npm update && npm i",
    "verify": "npm run lint -- --fix && npm run ci:build && npm run test:coverage && echo 'All Tests Passed!'"
  },
  "files": [
    "main.js",
    "main.d.ts"
  ],
  "peerDependencies": {
    "eslint": "^9.38.0",
    "angular-eslint": ">=18"
  },
  "peerDependenciesMeta": {
    "angular-eslint": {
      "optional": true
    }
  },
  "dependencies": {
    "@eslint/js": "^9.38.0",
    "@typescript-eslint/parser": "^8.46.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/utils": "^8.46.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-headers": "^1.3.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.1"
  },
  "devDependencies": {
    "@types/eslint-plugin-security": "^3.0.0",
    "angular-eslint": ">=18.0.0"
  }
}